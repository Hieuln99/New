    <form action="/insert" method="post">
    Name <input type="text" name="txtName" value="{{name}}">
    <br>
    Tuoi <input type="text" name="txtTuoi" value="{{tuoi}}">
    <br>
    <input type="submit" value="Insert">
    </form>
   
    <table width="50%" border="1">
        <tr>
            <td>Name</td>
            <td>Tuoi</td>
            <td>Delete</td>
            <td>Edit</td>
        </tr>
  
    {{#each data}}
        <tr>
            <td>{{name}}</td>
            <td>{{tuoi}}</td>
            <td><a href="/delete?id={{_id}}">Delete</a></td>
            <td><a href="/edit?id={{_id}}">Edit</a></td>
        </tr>  
    {{/each}}
  
    </table>
